<%=render 'shared/errors', obj: @user%>

<div class = 'row'>
  <div class='col-xs-12'>

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :username %><br>
          </div>

          <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: 'Enter username' , autofocus:true %>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %><br>
          </div>

          <div class="col-sm-8">

            <%= f.email_field :email ,class: "form_control", placeholder: "Enter email" , autofocus:true%>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %><br>
          </div>

          <div class="col-sm-8">

            <%= f.text_field :password ,class: "form_control", placeholder: "Enter password" , autofocus:true%>
          </div>


          <div class="form-group">
            <div class=" col-sm-10 col-xs-offset-2" style=" padding-top: 10px">
              <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: 'btn btn-primary btn-lg') %>
            </div>
          </div>
        </div>


    <% end %>

    <div class="col-xs-4 col-xs-offset-4" style="padding-left: 40px">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>


  </div>
</div>