<h1 align="center">Log in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %><br>
      </div>

      <div class="col-sm-8">

        <%= f.email_field :email ,class: "form_control", placeholder: "Enter email" , autofocus:true%>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %><br>
      </div>

      <div class="col-sm-8">

        <%= f.text_field :password ,class: "form_control", placeholder: "Enter password" , autocomplete: "off" %>
      </div>


      <div class="form-group">
        <div class=" col-sm-10 col-xs-offset-2" style=" padding-top: 10px">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>

    <p><%= link_to 'Forgot password?', new_password_reset_path %></p>

<% end %>

<div class="col-xs-4 col-xs-offset-4" style="padding-left: 40px">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>
</div>